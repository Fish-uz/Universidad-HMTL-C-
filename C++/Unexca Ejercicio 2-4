//Que rellene un array con 10 n√∫meros aleatorios y los muestre en pantalla en orden descenciente.

#include <iostream>

using namespace std;

int main(){
    int numero[]= {1,4,5,2,7,3,9,6,8,10};
    int i,f,aux;

    for(i=0; i<=10; i++){
        for(f=0;f<10;f++){
            if(numero[f]>numero[f+1]){
            aux=numero[f];
            numero[f]=numero[f+1];
            numero[f+1]= aux;  
            }
        }

    }

    cout<<"Orden Descenciente: "<<endl;

    for(i=9;i>0;i--){
        cout<<numero[i]<<endl;

    }

   
    return 0;
}